From: Lars-Dominik Braun <lars@6xq.net>
Date: Tue, 14 Jun 2022 13:34:42 +0200
Subject: [PATCH] Enable auto-saving by default

---
 src/cpp/session/resources/schema/user-prefs-schema.json | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/cpp/session/resources/schema/user-prefs-schema.json b/src/cpp/session/resources/schema/user-prefs-schema.json
index cd51fb3897..867dfe43de 100644
--- a/src/cpp/session/resources/schema/user-prefs-schema.json
+++ b/src/cpp/session/resources/schema/user-prefs-schema.json
@@ -1264,7 +1264,7 @@
         "auto_save_on_idle": {
             "type": "string",
             "enum": ["commit", "backup", "none"],
-            "default": "backup",
+            "default": "commit",
             "title": "Autosave mode on idle",
             "description": "How to deal with changes to documents on idle."
         },
@@ -1276,7 +1276,7 @@
         },
         "auto_save_on_blur": {
             "type": "boolean",
-            "default": false,
+            "default": true,
             "title": "Save documents when editor loses input focus",
             "description": "Whether to automatically save when the editor loses focus."
         },
